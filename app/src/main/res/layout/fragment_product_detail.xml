<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ProductDetailFragment">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="356dp"
            android:layout_height="287dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/productName_TextView_Detail"
        android:layout_width="194dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/productPrice_TextView_Detail"
        android:layout_width="198dp"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/productName_TextView_Detail"
        app:layout_constraintStart_toStartOf="@+id/productName_TextView_Detail"
        app:layout_constraintTop_toBottomOf="@+id/productName_TextView_Detail" />

    <TextView
        android:id="@+id/productDescription_TextView_Detail"
        android:layout_width="252dp"
        android:layout_height="230dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/productPrice_TextView_Detail"
        app:layout_constraintStart_toStartOf="@+id/productPrice_TextView_Detail"
        app:layout_constraintTop_toBottomOf="@+id/productPrice_TextView_Detail" />

</androidx.constraintlayout.widget.ConstraintLayout>